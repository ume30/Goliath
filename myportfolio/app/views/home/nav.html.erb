<html>
  <body class="back-color">
    <section class="header7">
       <% current_user = User.find_by(id: session[:user_id]) %>
        <% if current_user %>
          <p><%= link_to(current_user.name, "/users/#{current_user.id}") %></p>
        <% else %>
          <p></p>
        <% end %>
    </section>

    <section class="nav">
      <%= link_to("/users/#{@current_user.id}") do %>
      <p class="user3"><i class="fa fa-user"></i><span>マイページ</span></p>
      <% end %>
      <%= link_to("change-group") do %>
      <p class="users3"><i class="fa fa-users"></i><span>新しくグループを作成する</span></p>
      <% end %>
      <%= link_to("group-logout", {method: :post}) do %>
      <p class="users3"><i class="fa fa-angle-double-right"></i><span>グループを退出する</span></p>
      <% end %>
      <%= link_to("join-group") do %>
      <p class="open-text"><i class="fas fa-envelope-open-text"></i><span>グループに参加する</span></p>
      <% end %>
      <%= link_to("logout",{method: :post}) do %>
      <p class="sign-out"><i class="fas fa-sign-out-alt"></i><span>ログアウト</span></p>
      <% end %>
    </section>
  </body>
</html>